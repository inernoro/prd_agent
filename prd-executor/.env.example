# Redis (for queue and result storage)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=executor

# MongoDB (for job logs/audit)
MONGODB_URI=mongodb://localhost:27017/prd_executor

# Concurrency Control
MAX_CONCURRENCY=3

# Logs
LOGS_DIR=/var/log/prd-executor/logs
LOGS_RETENTION_DAYS=30

# HTTP API
API_ENABLED=true
API_PORT=3940
API_HOST=0.0.0.0

# Queue Consumer
QUEUE_ENABLED=true
QUEUE_PRIORITIES=high,normal,low
QUEUE_BLOCK_TIMEOUT=5000

# Callback
CALLBACK_TIMEOUT=10000
CALLBACK_RETRIES=3

# Execution
DEFAULT_TIMEOUT=300000
