# Authentication (optional - leave empty to disable auth)
# If set, users must enter this password to access the system
# If empty or not set, auth is disabled and anyone can access
PUBLISH_PASSWORD=

# Server
PUBLISH_PORT=3939
PUBLISH_HOST=0.0.0.0

# Git Configuration
PUBLISH_REPO_PATH=/path/to/your/repo
PUBLISH_BRANCH=main

# Execution (default project script, can be overridden per-project)
PUBLISH_EXEC_SCRIPT=./scripts/deploy-example.sh
PUBLISH_EXEC_TIMEOUT=300000

# Retry Configuration
PUBLISH_AUTO_RETRY=false
PUBLISH_RETRY_COUNT=3
PUBLISH_RETRY_DELAY=5000

# Executor Integration (optional)
# Mode: local (direct execution), http (via HTTP API), redis (via Redis Stream)
EXECUTOR_MODE=local
# HTTP mode settings
EXECUTOR_URL=http://localhost:3940
# Redis mode settings
REDIS_URL=redis://localhost:6379
EXECUTOR_STREAM=prd-executor:jobs
