# PRD-Publish Docker Configuration
# Copy this file to .env and modify as needed

# ============================================
# Required Settings
# ============================================

# Authentication (MUST change in production)
PUBLISH_USERNAME=admin
PUBLISH_PASSWORD=change-this-password
PUBLISH_JWT_SECRET=change-this-jwt-secret-key

# Host repository path (absolute path on host machine)
HOST_REPO_PATH=/path/to/your/repo

# ============================================
# Optional Settings
# ============================================

# Server port (default: 3939)
PUBLISH_PORT=3939

# Git branch to deploy (default: main)
PUBLISH_BRANCH=main

# Custom exec script path on host (default: ./exec.sh)
# HOST_EXEC_SCRIPT=/path/to/custom/exec.sh

# Execution timeout in ms (default: 300000 = 5 minutes)
PUBLISH_EXEC_TIMEOUT=300000

# Auto retry on timeout/network errors (default: false)
PUBLISH_AUTO_RETRY=false
PUBLISH_RETRY_COUNT=3
PUBLISH_RETRY_DELAY=5000

# SSH key path for private repos (default: ~/.ssh)
# SSH_KEY_PATH=/home/user/.ssh
