# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# HTML/CSS files
[*.{html,css}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Rust files
[*.rs]
indent_size = 4

# C# files
[*.cs]
indent_size = 4

# XML/csproj files
[*.{xml,csproj,sln}]
indent_size = 2

# Windows scripts - keep CRLF
[*.{ps1,bat,cmd}]
end_of_line = crlf

